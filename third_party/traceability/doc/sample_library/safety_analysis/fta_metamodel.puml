!procedure $TopEvent($name, $alias)
  rectangle "$name" as $alias
!endprocedure

!procedure $IntermediateEvent($name, $alias, $connection)
  rectangle "$name" as $alias
  $alias -u-> $connection
!endprocedure

!procedure $BasicEvent($name, $alias, $connection)
  ($name) as $alias
  $alias -u-> $connection
!endprocedure

!procedure $AndGate($alias, $connection)
  rectangle " " <<$and>> as $alias
  $alias -u-> $connection
!endprocedure

!procedure $OrGate($alias, $connection)
  rectangle " " <<$or>> as $alias
  $alias -u-> $connection
!endprocedure

!procedure $TransferIn($alias, $connection)
  rectangle " " <<$tf{scale=2}>> as $alias #transparent;line:transparent
  $alias -u-> $connection
!endprocedure

